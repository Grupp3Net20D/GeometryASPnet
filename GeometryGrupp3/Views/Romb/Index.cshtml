@model GeometriTDD.Geometry.Romb;

@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Romb</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/Shapes.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro&display=swap" rel="stylesheet">
    </head>
    <body>
        <header>
            <img src="~/img/romb.png" alt="Romb" class="shapeImg" />
        </header>
        <div class="calculator">
            <div class="numbersForm">
                <form asp-action="Index">
                    <h3>Kalkylator</h3>
                    <label>Ange sida:</label>
                    <input type="number" class="inputField" asp-for="Side" />
                    <label>Ange höjd:</label>
                    <input type="number" class="inputField" asp-for="Heigth" />
                    <input type="submit" class="calculateButton" />
                   </form>
                    <div class="result">
                        <div class="perimeter">
                            <h5>Omkrets</h5>
                            <div class="perimeterDisplay">
                                <p>@ViewData["perimeter"] mm</p>
                            </div>
                        </div>
                        <div class="area">
                            <h5>Area</h5>
                            <div class="areaDisplay">
                                <p>@ViewData["area"] mm2</p>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <footer class="border-top footer text-muted" id="footer">
            <div class="container buttonFooter">
                <p>&copy; 2021 - GeomeTre</p>
            </div>
        </footer>
    </body>
    </html>

}
